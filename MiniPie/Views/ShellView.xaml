<UserControl x:Class="MiniPie.Views.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             wpf:ResxExtension.DefaultResxName="MiniPie.Properties.Resources"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
             xmlns:im="clr-namespace:Microsoft.Expression.Interactivity.Media;assembly=Microsoft.Expression.Interactions"
             xmlns:interactivity="clr-namespace:MiniPie.Interactivity"
             xmlns:controls="clr-namespace:MiniPie.Controls"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             xmlns:wpf="clr-namespace:Infralution.Localization.Wpf"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:circularProgressButton="clr-namespace:MiniPie.Converter.CircularProgressButton"
             xmlns:circularProgressButton1="clr-namespace:MiniPie.Controls.CircularProgressButton"
             mc:Ignorable="d" 
             MinHeight="{Binding ApplicationSize, Converter={StaticResource ApplicationSizeConverter}}"
             MinWidth="{Binding ApplicationSize, Converter={StaticResource ApplicationSizeConverter}}"
             MaxWidth="{Binding ApplicationSize, Converter={StaticResource ApplicationSizeConverter}}"
             Padding="0"
             Background="#000000" FontFamily="Segoe UI"
             Foreground="#FFFFFF" BorderBrush="#000000" Unloaded="ShellView_OnUnloaded">
    <UserControl.Resources>
        <circularProgressButton:ProgressToAngleConverter x:Key="ProgressConverter"/>
        <Storyboard x:Key="StbFadeout">
            <DoubleAnimation AutoReverse="False"
                             From="1" To="0.0"
                             Storyboard.TargetName="CoverDisplay"
                             Storyboard.TargetProperty="Opacity"
                             Duration="0:0:0:01"/>
        </Storyboard>
        <Storyboard x:Key="StbFadein">
            <DoubleAnimation AutoReverse="False"
                             From="0.0" To="1"
                             Storyboard.TargetName="CoverDisplay"
                             Storyboard.TargetProperty="Opacity"
                             Duration="0:0:0:01"/>
        </Storyboard>
        <Storyboard x:Key="StbFadeoutPlayer">
            <DoubleAnimation AutoReverse="False"
                             To="0.0"
                             Storyboard.TargetName="PlayerButtons"
                             Storyboard.TargetProperty="Opacity"
                             Duration="0:0:.3"/>
        </Storyboard>
        <Storyboard x:Key="StbFadeinPlayer">
            <DoubleAnimation AutoReverse="False"
                             From="0.0" To="1"
                             Storyboard.TargetName="PlayerButtons"
                             Storyboard.TargetProperty="Opacity"
                             Duration="0:0:.3"/>
        </Storyboard>
        <tb:TaskbarIcon x:Key="NotifyIcon"
                    Visibility="Visible"
                    MenuActivation="RightClick"
                    IconSource="..\App.ico">
            <tb:TaskbarIcon.ContextMenu>
                <controls:MiniPieContextMenu/>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
        <Style TargetType="circularProgressButton1:PropgressButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type circularProgressButton1:PropgressButton}">
                        <Grid>
                            <Ellipse Stroke="Black" Fill="{TemplateBinding Background}"/>
                            <Ellipse Stroke="Black" Margin="0" Fill="White"/>
                            <circularProgressButton1:Arc StrokeThickness="2" Stroke="{TemplateBinding BorderBrush}" Margin="0">
                                <circularProgressButton1:Arc.StartAngle>
                                    <MultiBinding Converter="{StaticResource ProgressConverter}">
                                        <Binding Path="Minimum" RelativeSource="{RelativeSource TemplatedParent}"/>
                                        <Binding Path="." RelativeSource="{RelativeSource TemplatedParent}"/>
                                    </MultiBinding>
                                </circularProgressButton1:Arc.StartAngle>
                                <circularProgressButton1:Arc.EndAngle>
                                    <MultiBinding Converter="{StaticResource ProgressConverter}">
                                        <Binding Path="Value" RelativeSource="{RelativeSource TemplatedParent}"/>
                                        <Binding Path="." RelativeSource="{RelativeSource TemplatedParent}"/>
                                    </MultiBinding>
                                </circularProgressButton1:Arc.EndAngle>
                            </circularProgressButton1:Arc>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--
        <Style x:Key="ProgressBarStyle" TargetType="{x:Type circularProgressButton1:PropgressButton}">
            
        </Style>-->
    </UserControl.Resources>
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.MouseEnter">
            <BeginStoryboard Storyboard="{StaticResource StbFadeinPlayer}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="UserControl.MouseLeave">
            <BeginStoryboard Storyboard="{StaticResource StbFadeoutPlayer}" />
        </EventTrigger>
    </UserControl.Triggers>
    <i:Interaction.Triggers>
        <interactivity:DataEventTrigger EventName="CoverDisplayFadeOut">
            <im:ControlStoryboardAction Storyboard="{StaticResource StbFadeout}" ControlStoryboardOption="Play" />
        </interactivity:DataEventTrigger>
        <interactivity:DataEventTrigger EventName="CoverDisplayFadeIn">
            <im:ControlStoryboardAction Storyboard="{StaticResource StbFadein}" ControlStoryboardOption="Play" />
        </interactivity:DataEventTrigger>
    </i:Interaction.Triggers>
    <Border BorderBrush="#000000" BorderThickness="0" Background="#000000">
        <Border.ContextMenu>
            <controls:MiniPieContextMenu/>
        </Border.ContextMenu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="{Binding ApplicationSize, Converter={StaticResource ApplicationSizeConverter}}" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" Background="#000000">
                <Border BorderBrush="{x:Null}" BorderThickness="0" Padding="0" Name="CoverDisplay" MinWidth="{Binding ApplicationSize, Converter={StaticResource ApplicationSizeConverter}}">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding CoverImage}" />
                    </Border.Background>
                    <Border>
                        <Border.Background><ImageBrush ImageSource="/Images/cover.png"></ImageBrush></Border.Background>
                        <Grid Background="Transparent" MouseDown="AlbumArt_OnMouseDown">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                               <RowDefinition Height="*" /> 
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel Cursor="Arrow" Grid.Row="1" Grid.Column="1" Orientation="Horizontal"
                                        Name="PlayerButtons" Background="Transparent" Opacity="0">
                                <controls:ImageButton Width="24" Height="25" x:Name="PlayPrevious"
                                                  ImageSourceNormal="/Images/Player/prev-normal.png"
                                                  ImageSource="/Images/Player/prev-normal.png"
                                                  ImageSourcePressed="/Images/Player/prev-pressed.png"
                                                  ImageSourceMouseOver="/Images/Player/prev-mouseover.png"
                                                  ToolTip="plays the previous track" />
                                <circularProgressButton1:PropgressButton Width="33" Height="33" Maximum="{Binding MaxProgress}" Value="{Binding Progress}"/>
                                <controls:ImageButton Width="33" Height="33" x:Name="Play"
                                                      cal:Message.Attach="[Event Click] = [Action PlayPause]"
                                                      Visibility="{Binding IsPlaying, Converter={StaticResource VisibilityConverter}, ConverterParameter={StaticResource True}}"
                                                      ImageSourceNormal="/Images/Player/play-normal.png"
                                                      ImageSource="/Images/Player/play-normal.png"
                                                      ImageSourcePressed="/Images/Player/play-pressed.png"
                                                      ImageSourceMouseOver="/Images/Player/play-mouseover.png"
                                                      ToolTip="Toggle playback" />
                                <controls:ImageButton Width="33" Height="33" x:Name="Pause"
                                                      cal:Message.Attach="[Event Click] = [Action PlayPause]"
                                                      Visibility="{Binding IsPlaying, Converter={StaticResource VisibilityConverter}}"
                                                      ImageSourceNormal="/Images/Player/pause-normal.png"
                                                      ImageSource="/Images/Player/pause-normal.png"
                                                      ImageSourcePressed="/Images/Player/pause-pressed.png"
                                                      ImageSourceMouseOver="/Images/Player/pause-mouseover.png"
                                                      ToolTip="Toggle playback" />
                                <controls:ImageButton Width="24" Height="25" x:Name="PlayNext"
                                                  ImageSourceNormal="/Images/Player/next-normal.png"
                                                  ImageSource="/Images/Player/next-normal.png"
                                                  ImageSourcePressed="/Images/Player/next-pressed.png"
                                                  ImageSourceMouseOver="/Images/Player/next-mouseover.png"
                                                  ToolTip="plays the next track" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Border>
            </Border>
            
            <StackPanel Grid.Row="1" Margin="5" Visibility="{Binding HasTrackInformation, Converter={StaticResource VisibilityConverter}}">
                <TextBlock Name="CurrentTrack" FontSize="16" FontWeight="Light" TextWrapping="WrapWithOverflow" />
                <TextBlock Name="CurrentArtist" TextWrapping="WrapWithOverflow" FontSize="12" />
            </StackPanel>
            
        </Grid>
    </Border>
    
</UserControl>